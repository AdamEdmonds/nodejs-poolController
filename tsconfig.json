{
    "compilerOptions": {
        "baseUrl": ".",
       // "paths": { "*": [ "@types/*" ] },
        "target":"esnext",
        "module":"commonjs",
        "noImplicitAny": false,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": true,
            "paths": {
                "services/*": ["web/services/*"]
            },
        "outDir": "dist",
        "rootDir": ".",
        "moduleResolution": "node",
        "allowJs": false,
        "allowSyntheticDefaultImports": false,
        "esModuleInterop": false,
        "jsx": "react"
    },
    "include": [
        "web/**/*",
        "logger/**/*",
        "controller/**/*",
        "config/**/*", 
        "**/*.ts"
    ]
}
