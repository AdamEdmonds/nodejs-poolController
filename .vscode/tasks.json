{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "type": "typescript",
            "tsconfig": "tsconfig.json",
            "problemMatcher": [
                "$tsc"
            ],
            "group": "build"
        },
        {
            "type": "typescript",
            "tsconfig": "tsconfig.json",
            "option": "watch",
            "problemMatcher": [
                "$tsc-watch"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }, 
            "runOptions": {
                "runOn": "folderOpen"
            }
        },
        {
            "label": "clean data",
            "type":"shell",
            "command": "cd data; echo '{}' > poolConfig.json; echo '{}' > poolState.json;"
        },
        {
            "label": "copy to remote",
            "type": "shell",
            "command": "rsync -avzh * pi@10.0.0.170:/home/pi/nodejs-poolController --exclude='logs' --exclude='node_modules' --exclude='config.json' --exclude='dist' --exclude='.cache' --exclude='data'"
        }
    ]
}