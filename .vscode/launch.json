    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "attach",
            "name": "Debug Mocha Tests",
            "port": 9229,
            "protocol": "inspector",
            "timeout": 30000,
            "stopOnEntry": false
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "program": "${workspaceFolder}/dist/index.js",
            "args": [
                "config.json"
            ],
            "console": "integratedTerminal",
            "outFiles": [
                "${workspaceRoot}/dist/**/*"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Capture",
            "program": "${workspaceFolder}/dist/index.js",
            "args": [
                "config.json",
                "--capturePackets"
            ],
            "console": "integratedTerminal"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Replay from Replay Folder",
            "program": "${workspaceFolder}/dist/index.js",
            "args": [
                "--nolazy",
                "-r",
                "ts-node/register",
                "./replay/config.json",
                "--suppressWrite"
            ],
            "console": "integratedTerminal"
        },
        {
            "name": "Current TS File",
            "type": "node",
            "request": "launch",
            "args": [
                "${relativeFile}"
            ],
            "sourceMaps": true,
            "cwd": "${workspaceRoot}",
            "protocol": "inspector",
        },
        {
            "name": "Current TS Tests File",
            "type": "node",
            "request": "launch",
            "program": "${workspaceRoot}/node_modules/mocha/bin/_mocha",
            "args": [
                "--nolazy",
                "-r",
                "ts-node/register",
                "${relativeFile}"
            ],
            "cwd": "${workspaceRoot}",
            "protocol": "inspector",
            "env": {
                "TS_NODE_PROJECT": "${workspaceRoot}/tsconfig.json",
                "NODE_ENV": "production",
                "TS_NODE_FILES": "true"
            }
        }
    ]
}